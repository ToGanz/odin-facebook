<% provide(:title, @user.first_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
      <%= gravatar_for @user %>
        <br>
        <ul>  
          <li>Name: <%= @user.first_name %></li>
          <li>Lastname: <%= @user.last_name %></li>
          <li>Birthday: <%= @user.birthday %></li>
          <% if current_user == @user %>
            <%= link_to "delete", @user, method: :delete,
                                        data: { confirm: "You sure?" } %>
          <% end %>
        </ul>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>